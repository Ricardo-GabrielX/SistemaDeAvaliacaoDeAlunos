@model WebApplication1.Models.Aluno

@{
    ViewBag.Title = "Editar";
}

<div class="container my-5">
    <h2 class="mb-4 text-light">Editar Aluno</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="bg-dark text-light p-4 rounded shadow">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group row mb-4">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label fw-semibold" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control bg-dark text-light border-secondary" })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-4">
                @Html.LabelFor(model => model.RA, htmlAttributes: new { @class = "col-sm-2 col-form-label fw-semibold" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.RA, new { @class = "form-control bg-dark text-light border-secondary" })
                    @Html.ValidationMessageFor(model => model.RA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-5">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "col-sm-2 col-form-label fw-semibold" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Data, new { @class = "form-control bg-dark text-light border-secondary", type = "date" })
                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                </div>
            </div>

            <h4 class="mb-3 border-bottom pb-2">Notas por Disciplina</h4>

            @for (int i = 0; i < Model.Notas.Count; i++)
            {
                <div class="mb-4 p-3 border rounded bg-secondary bg-opacity-10">
                    <label class="fw-bold mb-3 d-block">
                        @(Model.Notas[i].Disciplina?.Nome ?? "Disciplina não definida")
                    </label>

                    <div class="row g-3">
                        <div class="col-md-3">
                            @Html.Label("1º Bim", htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Notas[i].Bimestre1, new { @class = "form-control bg-dark text-light border-secondary" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("2º Bim", htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Notas[i].Bimestre2, new { @class = "form-control bg-dark text-light border-secondary" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("3º Bim", htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Notas[i].Bimestre3, new { @class = "form-control bg-dark text-light border-secondary" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("4º Bim", htmlAttributes: new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Notas[i].Bimestre4, new { @class = "form-control bg-dark text-light border-secondary" })
                        </div>
                    </div>
                </div>
            }

            <div class="form-group mt-4 text-end">
                <input type="submit" value="Salvar" class="btn btn-success px-4" />
                @Html.ActionLink("Cancelar", "Listar", null, new { @class = "btn btn-outline-light ms-3 px-4" })
            </div>
        </div>
    }
</div>

@model WebApplication1.Models.Aluno

@{
    ViewBag.Title = "Editar";
}

<h2 class="mb-4">Editar Aluno</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row mb-3">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-3">
        @Html.LabelFor(model => model.RA, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.RA, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row mb-4">
        @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Data, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
        </div>
    </div>

    <h4 class="mb-3">Notas por Disciplina</h4>

    @for (int i = 0; i < Model.Notas.Count; i++)
    {
        <div class="form-group">
            <label>@(Model.Notas[i].Disciplina?.Nome ?? "Disciplina não definida")</label>

            <div class="row">
                <div class="col-md-2">
                    @Html.Label("1º Bim")
                    @Html.TextBoxFor(m => m.Notas[i].Bimestre1, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.Label("2º Bim")
                    @Html.TextBoxFor(m => m.Notas[i].Bimestre2, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.Label("3º Bim")
                    @Html.TextBoxFor(m => m.Notas[i].Bimestre3, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.Label("4º Bim")
                    @Html.TextBoxFor(m => m.Notas[i].Bimestre4, new { @class = "form-control" })
                </div>
            </div>
        </div>
    }

    <div class="form-group">
        <div class="text-end">
            <input type="submit" value="Salvar" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Listar", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    </div>
</div>
}
